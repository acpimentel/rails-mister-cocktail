<div class="container">
  <div class="row text-center justify-content-center mt-4 mb-3">
    <div class="col-4 h1-s">
      <h1>Create your cocktail</h1>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-4">
      <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name %>
        <%= f.input :photo, as: :file, input_html: { multiple: true }  %>
      <div class="row d-flex justify-content-center pb-2">
        <%= f.button :submit, class: "btn btn-dark" %>
      <% end %>
      </div>
    <div class="row d-flex justify-content-center pb-2">
      <%= link_to "Back to the list", cocktails_path, class: "btn btn-dark" %>
    </div>
  </div>
  </div>
</div>
