<div class="container">
  <div class="row">
      <% @cocktails.each do |cocktail| %>
    <div class="col-6 col-md-3">
      <div class="ps-cocktails">
        <% if cocktail.photo.attached? %>
          <%= cl_image_tag cocktail.photo.key %>
        <% else %>
        <% end %>
      </div>
      <div class="card-name-details">
        <h5 class="card-title"> <%= cocktail.name %> </h5>
        <%= link_to "details", cocktail_path(cocktail), class: "btn btn-dark" %>
      </div>
    </div>
      <% end %>
  </div>
</div>

